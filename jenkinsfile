pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                git url: 'https://github.com/EemelPo/inclass6.git', branch: 'master'
            }
        }
        stage('Build') {
            steps {
                // Use 'bat' for Windows instead of 'sh'
                bat 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                // Use 'bat' for Windows instead of 'sh'
                bat 'mvn test'
            }
        }
    }
}
